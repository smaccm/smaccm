// memcpy routines
//
///////////////////////////////////////////////////////////////////////////////

aadlInputToValMemcpy(type, dst, src) ::= <<
memcpy(<type.valToPtr><dst>, <type.aadlInputToPtr><src>, sizeof(<type.name>));
>>

valToAadlOutputMemcpy(type, dst, src) ::= <<
memcpy(<type.aadlOutputToPtr><dst>, <type.valToPtr><src>, sizeof(<type.name>));
>>

camkesInputToValMemcpy(type, dst, src) ::= <<
memcpy(<type.valToPtr><dst>, <type.camkesInputToPtr><src>, sizeof(<type.name>));
>>

valToCamkesOutputMemcpy(type, dst, src) ::= <<
memcpy(<type.camkesOutputToPtr><dst>, <type.valToPtr><src>, sizeof(<type.name>));
>>

camkesWrapReturnCallFail(str) ::= <<
if(<str> != 0) {
   fprintf(stderr,\"Operation '<str>' failed in %s at %d.\\n\",__FILE__,__LINE__);
   *((int*)0)=0xdeadbeef;
}
>>
