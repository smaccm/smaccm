filenameBlockComment(date, path, purpose) ::= <<
/**************************************************************************

  ***AUTOGENERATED CODE: DO NOT MODIFY***

<purpose>

 **************************************************************************/
>>

stdFilePrefix(date, path, purpose) ::= <<
<DARPALicenseComment()>
<filenameBlockComment(date, path, purpose)>


>>

stdFilePostfix(name, path) ::= <<
>>

commentIf(comment, body) ::= <<
<if(!trim(body).empty)>
// <comment><\n>
<body>
<endif>
>>

///////////////////////////////////////////////////////////////////////////////
//
// Standard comments for XML files
//
///////////////////////////////////////////////////////////////////////////////

xmlBlockComment(arg) ::= <<

\<!--
  <arg>
--\>

>>

xmlDARPALicenseComment() ::= "<xmlBlockComment(DARPALicense())>"

xmlFilenameBlockComment(date, path, purpose) ::= <<
\<!--

   File: <path>
   Created on: <date>
   using Dulcimer AADL system build tool suite

   ***AUTOGENERATED CODE: DO NOT MODIFY***

  <purpose>

--\>

>>



xmlFilePrefix(date, path, purpose) ::= <<

<xmlDARPALicenseComment>

<xmlFilenameBlockComment(date, path, purpose)>

>>

xmlFilePostfix(name, path) ::= <<

<xmlBlockComment(arg={End of autogenerated file: <path>})>

>>


