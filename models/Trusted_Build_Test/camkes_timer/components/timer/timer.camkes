import "../../interfaces/timer.idl4"; 

component timerbase{
	hardware;
	dataport Buf timer_reg;
	emits DataAvailable irq;
}

component timer {
        dataport Buf 		timerbase;
        consumes DataAvailable  irq;

    	provides timer_inf 	tm;
	emits timer_evt         timer_update;
}

